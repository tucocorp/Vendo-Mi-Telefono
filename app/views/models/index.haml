.text-center
%h1 Listing models

%table
  %thead
    %tr
      %th Name
      %th Price
      %th Trademark
      %th{:colspan=> 2}
  %tbody
    - @models.each do |model|
      %tr
        %td
          = model.name
        %td
          = model.price
        %td
          = model.trademark.name
        %td
          = link_to 'Show', model
        %td
          = link_to 'Edit', edit_model_path(model)
        %td
          = link_to 'Destroy', model, method: :delete, data: { confirm: 'Are you sure?' }
%br

= link_to 'New Model', new_model_path 